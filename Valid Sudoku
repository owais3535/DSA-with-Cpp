class Solution {
public:
    bool isValidSudoku(vector<vector<char>>& board) {
        bool rows[9][9] = {false};
        bool cols[9][9] = {false};
        bool boxes[9][9] = {false};
        for(int i = 0; i<9; i++){
            for(int j=0;j<9;j++){
                char c = board[i][j];
                if(c == '.')
                    continue;
                int d = c-'1';
                int boxindex = (i/3)*3 + j/3;
                if(rows[i][d] || cols[j][d] || boxes[boxindex][d])
                    return false;
                rows[i][d] = true ; 
                cols[j][d] = true;
                boxes[boxindex][d] = true; 
            }
        }
        return true;
    }
};
